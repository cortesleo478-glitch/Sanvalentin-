      --bg2:#1a0025;
      --pink:#ff4da6;
      --hot:#ff2b6a;
      --soft:#ffd1e8;
      --gold:#ffd36a;
      --white:#fff;
    }

    *{box-sizing:border-box}
    body{
      margin:0;
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial;
      min-height:100vh;
      overflow:hidden;
      background: radial-gradient(circle at 20% 20%, #3b003f 0%, var(--bg1) 35%, var(--bg2) 100%);
      color:var(--white);
    }

    /* Fondo brillante */
    .glow{
      position:fixed; inset:-40px;
      background:
        radial-gradient(circle at 30% 30%, rgba(255,77,166,.35), transparent 40%),
        radial-gradient(circle at 70% 60%, rgba(255,211,106,.20), transparent 45%),
        radial-gradient(circle at 50% 90%, rgba(255,43,106,.18), transparent 55%);
      filter: blur(10px);
      animation: breathe 5s ease-in-out infinite;
      z-index:0;
    }
    @keyframes breathe{
      0%,100%{transform:scale(1)}
      50%{transform:scale(1.05)}
    }

    /* Corazones flotando */
    .hearts{
      position:fixed; inset:0;
      pointer-events:none;
      z-index:1;
      overflow:hidden;
    }
    .heart{
      position:absolute;
      font-size:18px;
      opacity:.9;
      animation: floatUp linear infinite;
      text-shadow: 0 0 12px rgba(255,77,166,.6);
    }
    @keyframes floatUp{
      0%{transform:translateY(120vh) scale(.8) rotate(0deg); opacity:0}
      10%{opacity:1}
      100%{transform:translateY(-30vh) scale(1.3) rotate(360deg); opacity:0}
    }

    /* Contenedor principal */
    .wrap{
      position:relative;
      z-index:2;
      height:100vh;
      display:flex;
      align-items:center;
      justify-content:center;
      padding:18px;
    }

    .card{
      width:min(520px, 96vw);
      border-radius:26px;
      padding:22px 18px;
      background: rgba(255,255,255,.06);
      border: 1px solid rgba(255,255,255,.12);
      box-shadow: 0 20px 60px rgba(0,0,0,.55);
      backdrop-filter: blur(12px);
      text-align:center;
      transform: translateY(12px);
      animation: popIn .8s ease forwards;
    }
    @keyframes popIn{
      to{transform:translateY(0)}
    }

    .date{
      display:inline-flex;
      gap:10px;
      align-items:center;
      justify-content:center;
      padding:10px 14px;
      border-radius:999px;
      background: rgba(255,77,166,.14);
      border: 1px solid rgba(255,77,166,.35);
      font-weight:700;
      letter-spacing:.3px;
      margin-bottom:14px;
    }

    .title{
      font-size:32px;
      margin:0 0 8px 0;
      line-height:1.1;
      text-shadow: 0 0 22px rgba(255,77,166,.35);
    }

    .subtitle{
      margin:0 auto 14px auto;
      max-width:420px;
      color:rgba(255,255,255,.88);
      font-size:15px;
      line-height:1.45;
    }

    .flowers{
      font-size:26px;
      margin:10px 0 10px 0;
      opacity:.95;
    }

    .bigLove{
      font-size:48px;
      font-weight:900;
      margin:10px 0 6px 0;
      background: linear-gradient(90deg, #ff4da6, #ffd36a, #ff2b6a);
      -webkit-background-clip:text;
      background-clip:text;
      color:transparent;
      text-shadow:none;
      animation: shimmer 2.5s ease-in-out infinite;
    }
    @keyframes shimmer{
      0%,100%{filter:drop-shadow(0 0 12px rgba(255,77,166,.25))}
      50%{filter:drop-shadow(0 0 22px rgba(255,211,106,.25))}
    }

    .msg{
      margin:0 auto;
      max-width:460px;
      font-size:16px;
      line-height:1.55;
      color:rgba(255,255,255,.92);
    }

    .buttons{
      margin-top:18px;
      display:flex;
      gap:10px;
      justify-content:center;
      flex-wrap:wrap;
    }

    button{
      border:none;
      cursor:pointer;
      border-radius:999px;
      padding:12px 16px;
      font-weight:800;
      font-size:14px;
      transition:.2s transform ease, .2s opacity ease;
    }
    button:active{transform:scale(.98)}

    .btn1{
      background: linear-gradient(90deg, #ff4da6, #ff2b6a);
      color:white;
      box-shadow: 0 10px 30px rgba(255,43,106,.22);
    }
    .btn2{
      background: rgba(255,255,255,.08);
      border: 1px solid rgba(255,255,255,.14);
      color:white;
    }

    /* Mensaje secreto */
    .secret{
      margin-top:14px;
      padding:14px 14px;
      border-radius:18px;
      background: rgba(0,0,0,.25);
      border: 1px solid rgba(255,77,166,.25);
      display:none;
      animation: fadeIn .4s ease forwards;
    }
    @keyframes fadeIn{
      from{opacity:0; transform:translateY(6px)}
      to{opacity:1; transform:translateY(0)}
    }

    .secret b{
      color:var(--soft);
    }

    /* Texto abajo */
    .footer{
      margin-top:14px;
      font-size:12px;
      opacity:.7;
    }
  </style>
</head>


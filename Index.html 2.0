  <script>
    // Corazones flotando
    const hearts = document.getElementById("hearts");
    const icons = ["ğŸ’—","ğŸ’–","ğŸ’˜","â¤ï¸","ğŸ’","ğŸ’•","ğŸŒ¹","âœ¨"];

    function spawnHeart(){
